{
    "comments": { // 在编辑器中使用快捷键注释
        // 行注释
        "lineComment": "//",
        // 块注释
        "blockComment": [ "/******", "******/" ]
    },

    "folding": { // 可折叠标记
        "markers": {
            "start": "^\\s*#if",
            "end": "^\\s*#else"
        }
    },
    // 自动缩进
    "brackets": [
        ["/*", "*/"],
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    // 自动补全右关闭
    "autoClosingPairs": [
        ["/*", "*/"],
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    // 选中字符时自动包裹
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ]
}
